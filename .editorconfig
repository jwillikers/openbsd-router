root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[dhcpd.conf]
indent_style = tab

[var/unbound/etc/*.conf]
indent_style = tab

[*.adoc]
indent_size = unset
max_line_length = off

[{justfile,.justfile,*.just}]
indent_size = 4
